<div class="local_komettranslator review">
    <h3>{{title}}</h3>
    <table class="generaltable">
        <thead>
            <tr>
                <th>{{#str}} topic, local_komettranslator {{/str}}</th>
                <th>{{#str}} descriptors, local_komettranslator {{/str}}</th>
            </tr>
        </thead>
        <tbody>
            {{#topics}}
                <tr>
                    <td>{{shortname}}</td>
                    <td>
                        <ul>
                        {{#descriptors}}
                            <li>{{title}} {{#niveau}}({{niveau}}){{/niveau}}</li>
                        {{/descriptors}}
                        </ul>
                    </td>
                </tr>
            {{/topics}}
        </tbody>
    </table>
</div>
